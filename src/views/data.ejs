                                    <div>
                                        <p>
                                            <%= user.projectInfo %>
                                        </p><br>
                                        <div class="link">
                                            <a href="<%= user.urlink %>">Click here to view the files/github project</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="link">
                                </div>
                            </div>

                            <button class="show-more-button" onclick="toggleContent(this)">
                                Show More
