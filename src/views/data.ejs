    <style>
        body{
            background: #F0F3FA;
        }
        .full {
            background-color: #F0F3FA;
            /* Light gray background color */
            border-radius: 10px;
            /* Rounded corners */
            padding: 20px;
            /* Padding inside the box */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            /* Box shadow for a subtle lift */
        }

        .head {
            margin-bottom: 20px;
            /* Add some space below the header */
        }

        img {
            border-radius: 50%;
            /* Make the profile picture round */
        }

        .o1,
        .o2,
        .o3,
        .o5,
        .o6 {
            margin-bottom: 15px;
            /* Add space between each section */
        }

        p {
            margin: 0;
            /* Remove default margin for paragraphs */
        }

        /* Customize the header text */
        .head p {
            font-size: 1.5rem;
            font-weight: bold;
            color: #336E7B;
            /* Dark text color */
        }

        /* Customize the section titles */
        .o1,
        .o2,
        .o3,
        .o5,
        .o6 {
            font-size: 1.25rem;
            font-weight: bold;
            color: #555;
            /* Medium dark text color */
        }

        /* Customize the content text */
        .full p {
            font-size: 1rem;
            color: #666;
            /* Medium text color */
        }

        /* Add a subtle border between sections */
        .o1,
        .o2,
        .o3,
        .o5,
        .o6 {
            border-bottom: 1px solid #ddd;
            /* Light gray border */
        }

        /* Style the PROJECT section differently */
        .o5 {
            background-color: #fff;
            /* White background for PROJECT section */
            padding: 15px;
            /* Padding inside PROJECT section */
            border-radius: 8px;
            /* Rounded corners for PROJECT section */
            box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
            /* Box shadow for PROJECT section */
        }

        .col-12 {
            padding-right: 87px;
        }

        .show-more-button {
            background-color: #3498db;
            /* Button background color */
            color: #fff;
            /* Text color */
            border: none;
            /* Remove border */
            padding: 10px 20px;
            /* Add padding */
            font-size: 16px;
            /* Set font size */
            cursor: pointer;
            /* Add cursor pointer on hover */
            border-radius: 5px;
            /* Add rounded corners */
            transition: background-color 0.3s ease;
            /* Add smooth transition */
        }

        .show-more-button:hover {
            background-color: #2980b9;
            /* Change background
             color on hover */
        }
       
    /* Add or modify styles as needed */

    /* ... Your existing styles ... */

    .show-more-button {
        background-color: #22313F;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-align: center; /* Center text */
        width: 25%; /* Full width */
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 37%;
        transition: background-color 0.3s ease;
    }

    .show-more-button:hover {
        background-color: #19B5FE;
    }

    .arrow-down {
        width: 0;
        height: 0;
        border-left: 10px solid transparent;
        border-right: 10px solid transparent;
        border-top: 10px solid #fff; /* Adjust color as needed */
        margin-left: 5px; /* Adjust spacing as needed */
    }
</style>

  


</head>

