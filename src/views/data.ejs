                <h2 style="font-size: 1.8rem;">Search on</h2>
                <ul>
                    <a href="#aboutus">
                        <li class="conlist">GROUP</li>
                    </a>
                    <a href="#popularprojects">
                        <li class="conlist">PROJECTS NAME</li>
                    </a>
                    <a href="#popularinst">
                        <li class="conlist">INSTITUTIONS NAME</li>
                    </a>
                    <a href="#achie">
                        <li class="conlist">GENERE</li>
                    </a>
                    <li class="conlist" id="drop">NAME OF STUDENT</li>
                    
                </ul>
            </div>
            <div class="scroll" style="background: #F0F3FA;
">
                <% data.forEach(function(user) { %>

                    <div class="fullfull">
                        <div class="full">
                            <div class="head">
                                <div class="headofhead" style="display:flex ; flex-direction: row;">
                                    <img src="../static/images/profile.jpg" alt=""
                                        style="height: 44px; width: 43px; border-radius: 50%; margin: 6px;">
                                    <div class="innerhead"
                                        style="display: flex; flex-direction: column; margin-top: 3px;">
                                        <strong>
                                            <p style="height: 17px; color: black;">
                                                <%= user.name %>
                                            </p>
                                        </strong>
                                        <p style="color: black;">
                                            <%= user.collegeName %>,
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="o1 he" style="display: flex; flex-direction: row;">
                                <div style="width: 30%; font-size: 1.25rem;">Project Name: </div>
                                <div style="width: 70%;">
                                    <p>
                                        <%= user.projectName %>
                                    </p>
                                </div>
                            </div>

                            <div class="o1 he" style="display: flex; flex-direction: row;">
                                <div style="width: 30%; font-size: 1.25rem;">Name of the College: </div>
                                <div style="width: 70%;">
                                    <p>
                                        <%= user.collegeName %>
                                    </p>
                                </div>
                            </div>
                            <div class="o1 he" style="display: flex; flex-direction: row;">
                                <div style="width: 30%; font-size: 1.25rem;">Email: </div>
                                <div style="width: 70%;">
                                    <p>
                                        <%= user.email %>
                                    </p>
                                </div>
                            </div>
                            <div class="o1 he" style="display: flex; flex-direction: row;">
                                <div style="width: 30%; font-size: 1.25rem;">Genere: </div>
                                <div style="width: 70%;">
                                    <p>
                                        <%= user.genre %>
                                    </p>
                                </div>
                            </div>
                            <div class="o1 he" style="display: flex; flex-direction: row;">
                                <div style="width: 30%; font-size: 1.25rem;">Branch: </div>
                                <div style="width: 70%;">
                                    <p>
                                        <%= user.branch %>
                                    </p>
                                </div>
                            </div>
                            <div class="o1 he" style="display: flex; flex-direction: row;">
                                <div style="width: 30%; font-size: 1.25rem;">Year Of Study: </div>
                                <div style="width: 70%;">
                                    <p>
                                        <%= user.yearOfStudy %>
                                    </p>
                                </div>
                            </div>

                            <div class="hidden-content">
                                <div class="o6 he" style="display: flex; flex-direction: row;">
                                    <div style="width: 30%; font-size: 1.25rem;">Group Members: </div>
                                    <div style="width: 70%;">
                                        <p>
                                            <%= user.groupMembers %>
                                        </p>
                                    </div>
                                </div>
                                <div class="o1 he" style="display: flex; flex-direction: row;">
                                    <div style="width: 30%; font-size: 1.25rem;">Mentor Name: </div>
                                    <div style="width: 70%;">
                                        <p>
                                            <%= user.mentor %>
                                        </p>
                                    </div>
                                </div>


                                <div class="o2 he" style="display: flex; flex-direction: row;">
                                    <div style="width: 30%; font-size: 1.25rem;">Span Of Project: </div>
                                    <div style="width: 70%;">
                                        <p>
